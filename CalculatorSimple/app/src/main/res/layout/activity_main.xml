<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/root"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:layout_gravity="fill"
android:rowCount="6"
android:columnCount="4"
android:orientation="horizontal">

<LinearLayout
android:id="@+id/linearLayout1"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="160sp"
android:layout_row="0"
android:layout_column="0">

    <TextView
    android:id="@+id/expressionTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="80sp"
    android:layout_gravity="end"
        android:background="#FFFFFF" />

    <TextView
    android:id="@+id/resultTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="80sp"
        android:background="#FFFFFF"
        android:autoText="true" />
</LinearLayout>

<LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_columnSpan="4"
    android:weightSum="4"
    android:layout_row="1"
    android:layout_column="0">

    <Button
        android:id="@+id/btnClearText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/clear_text"
        android:layout_weight="1"
        android:onClick="onClearText" />

    <Button
        android:id="@+id/btnSignText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/sign_text"
        android:layout_weight="1"
        android:onClick="onSignText" />

    <Button
        android:id="@+id/btnPercentText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/percent_text"
        android:layout_weight="1"
        android:onClick="onPercentText" />


    <Button
        android:id="@+id/btnDevideText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="fill"
        android:layout_weight="1"
        android:onClick="onDevideText"
        android:text="@string/devide" />
</LinearLayout>

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:layout_columnSpan="4"
        android:weightSum="4"
        android:layout_row="2"
        android:layout_column="0">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/seven_text"
            android:id="@+id/button7"
            android:layout_weight="1"
            android:onClick="on7Text"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/eight_text"
            android:id="@+id/button4"
            android:layout_weight="1"
            android:onClick="on8Text"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/nine_text"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:onClick="on9Text"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/multiply_text"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:onClick="onXText"
             />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:layout_columnSpan="4"
        android:weightSum="4"
        android:layout_row="3"
        android:layout_column="0">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/four_text"
            android:layout_weight="1"
            android:id="@+id/button9"
            android:onClick="on4Text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/five_text"
            android:layout_weight="1"
            android:id="@+id/button12"
            android:onClick="on5Text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/six_text"
            android:layout_weight="1"
            android:id="@+id/button10"
            android:onClick="on6Text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/substract_text"
            android:layout_weight="1"
            android:id="@+id/button11"
            android:onClick="onSubstractText"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:layout_columnSpan="4"
        android:weightSum="4"
        android:layout_row="4"
        android:layout_column="0">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/one_text"
            android:layout_weight="1"
            android:id="@+id/button13"
            android:onClick="on1Text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/two_text"
            android:layout_weight="1"
            android:id="@+id/button14"
            android:onClick="on2Text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/three_text"
            android:layout_weight="1"
            android:id="@+id/button15"
            android:onClick="on3Text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/plus_text"
            android:layout_weight="1"
            android:id="@+id/button16"
            android:onClick="onPlusText"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_row="5"
        android:layout_column="0">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/point_text"
            android:layout_weight="1"
            android:id="@+id/button"
            android:onClick="onPoint_Text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/zero_text"
            android:layout_weight="1"
            android:id="@+id/button2"
            android:onClick="on0Text"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/stat_text"
            android:layout_weight="1"
            android:id="@+id/button3"
            android:onClick="onStatText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/equal_text"
            android:id="@+id/button8"
            android:layout_weight="1"
            android:onClick="onEqualText"
            />
    </LinearLayout>


</GridLayout>
